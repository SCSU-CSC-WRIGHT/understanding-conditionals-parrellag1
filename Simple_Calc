op = input("would you like to +, -, *, or /:\n ")

num1 = int(input("enter first num: "))
num2 = int(input("enter second num: "))
if(op == '+'):
    print(num1 + num2)
elif(op == '-'):
    print(num1 - num2)
elif(op == '/'):
    print(num1 / num2)
elif(op == '*'):
    print(num1 * num2)
else:
    print("error")